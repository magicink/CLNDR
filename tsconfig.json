{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "incremental": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "types/**/*.d.ts",
    "tests/jest/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
